    <!-- Event Section Start -->
    <section id="blog" class="blog-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="section-title">
                        <h5>Les récents Évènements du BHV</h5>
                        <h2>Les Évènements</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="single-blog">
                        <div class="blog-img">
                            <a href="#"> {# TODO Lien par events #}
                                <img src="assets/img/blog/blog-1.jpg" alt=""/>
                            </a>
                        </div>
                        <div class="blog-content">
                            <div class="blog-title">
                                <h3>
                                    <a href="#">Lien par events</a>
                                </h3>
                            </div>
                            <div class="blog-text">
                                <p>
                                    Descriptions de l'évent
                                </p>
                            </div>
                            <div class="blog-bottom-text-link">
                                <span>Date de l'évent</span>
                                <a href="#">Lien de l'évent</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="blog-more-btn text-center mt-15">
                        <a class="default-btn" href="blog.html">Voir tout les Évènements</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
